{
  "expo": {
    "name": "德国充电桩查找",
    "slug": "germany-ev-charger-finder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.evchargerfinder",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "我们需要访问您的位置以显示附近的充电桩",
        "NSLocationAlwaysUsageDescription": "我们需要访问您的位置以显示附近的充电桩"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.overseasjobassessment"
    },
    "plugins": [
      "expo-linear-gradient"
    ]
  }
} 